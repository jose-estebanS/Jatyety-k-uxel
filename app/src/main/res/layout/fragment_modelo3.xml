                    />

                <ImageView
                    android:id="@+id/pantorrilladerecha2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pantorrilladerecha"
                    android:translationX="156dp"
                    android:translationY="375dp"
                    android:alpha="0"
                    />

                <ImageView
                    android:id="@+id/pantorrillaizquierda2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pantorrilladerecha"
                    android:translationX="197dp"
                    android:translationY="375dp"
                    android:alpha="0"
                    />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="284dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="26dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="376dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="436dp" />
            </android.support.design.widget.CoordinatorLayout>
            <Button
                android:id="@+id/changeModeloUno"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Rotar cuerpo"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                />
        </android.support.design.widget.CoordinatorLayout>
    </ScrollView>
