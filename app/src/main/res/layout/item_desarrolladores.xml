    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/itemdesarrollador"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@drawable/uiet"
            android:id="@+id/imagenDesarrollador"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_margin="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jefe del Departamento de Vinculación Social y Extensión Universitaria:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/rolDesarrollador"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="José Ángel Martínez"
                android:textSize="15sp"
                android:id="@+id/nombreDesarrollador"
                android:layout_below="@+id/rolDesarrollador"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="15sp"
                android:id="@+id/correo"
                android:layout_below="@+id/nombreDesarrollador"/>
        </RelativeLayout>
    </LinearLayout>
