<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/itemdesarrollador"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:background="#1976d2">
        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:src="@drawable/uiet"
            android:id="@+id/imagenDesarrollador"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_margin="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jefe del Departamento de Vinculación Social y Extensión Universitaria:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/rolDesarrollador"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="José Ángel Martínez"
                android:textSize="15sp"
                android:id="@+id/nombreDesarrollador"
                android:layout_below="@+id/rolDesarrollador"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="15sp"
                android:id="@+id/correo"
                android:layout_below="@+id/nombreDesarrollador"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>